<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f9f9"
    tools:context=".SetupUserProfile">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/avatar">

    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileImage"
        android:layout_centerHorizontal="true"
        android:paddingTop="15dp"
        android:text="Profile Info"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/profiledesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text2"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:textColor="#2B2A2A"
        android:text="Set your profile name and optimal profile image"
        android:textSize="15sp">

    </TextView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profiledesc"
        android:background="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <EditText
                android:id="@+id/Name"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/textbox_outline"
                android:hint="Type Your Name"
                android:inputType="text"
                android:padding="10dp"
                android:textColorHint="#686868"
                android:textColor="@color/black"
                android:textSize="20dp">

            </EditText>

            <Button
                android:id="@+id/setupBtn"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_below="@id/Name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="#3FB644"
                android:backgroundTint="#00BCD4"
                android:text="Setup Profile"
                android:textColor="@color/white">

            </Button>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</RelativeLayout>